@model List<Entities.Models.Hospital>

    <!DOCTYPE html>
    <html>
    <head>
        <title>Hospital List</title>
        <style>
            .card {
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                overflow: hidden;
                margin-bottom: 20px;
            }

            .card img {
                width: 100%;
                height: auto;
                border-radius: 8px 8px 0 0;
            }

            .card-body {
                padding: 20px;
            }

            .hospital-name {
                font-size: 20px;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .address, .phone {
                font-size: 16px;
                color: #666;
            }
        </style>
    </head>
    <body>
    <div class="card">
        <h1 class="text-center">Hospitals</h1>
    </div>
        @foreach (var hospital in Model)
    {
        <div class="card">
            <!-- <img src="hospital-image.jpg" alt="Hospital Image"> -->
            <div class="card-body">
                <div class="hospital-name">@hospital.HospitalName</div>
                <div class="hospital-details">
                    <p><strong>Address:</strong> @hospital.Address</p>
                    <p><strong>Phone Number:</strong> @hospital.PhoneNum</p>
                </div>
            </div>
        </div>
    }
    </body>
</html>
