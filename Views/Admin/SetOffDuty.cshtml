@model OffDutyDTO
<partial name="_AdminLayout" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <h2>Set Off Duty Doctor</h2>
                <form asp-action="SetOffDuty">
                    <input type="hidden" asp-for="DoctorID" />
                    <input type="hidden" asp-for="OffDuty" value="true" />
                    <input type="hidden" asp-for="DepartmentID" value=@Model.DepartmentID/>

                    <div class="form-group">
                        <label asp-for="OffDutyStartDate">Start Date:</label>
                        <input type="date" asp-for="OffDutyStartDate" />
                    </div>
                    <br>
                    <div class="form-group">
                        <label asp-for="OffDutyEndDate">End Date:</label>
                        <input type="date" asp-for="OffDutyEndDate" />
                    </div>
                    <button type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>