@model DepartmentDTO
<partial name="_AdminLayout" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <h2>@Model.HospitalName</h2>
            </div>

            <div class="row">
                @foreach (var department in Model.Departments)
                {
                    <div class="col-md-4 my-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@department.DepartmentName</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Department</h6>
                                <p class="card-text">Ã–rnek text</p>
                            </div>

                            <div class="card-footer">
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Admin" asp-action="ViewPersonnel" asp-route-id="@department.DepartmentID">
                                    Personnel
                                </a>

                                <form asp-controller="Admin" asp-action="DeleteDepartment" method="post" class="float-right">
                                    <input name="id" value="@department.DepartmentID" type="hidden" />
                                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-3">
                <a class="btn btn-primary" asp-controller="Admin" asp-action="AddDepartment" asp-route-id="@Model.HospitalID">
                    Add Department
                </a>
            </div>
        </div>
    </div>
</div>
