@model HospitalDTO
<partial name="_AdminLayout"/>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center"><h2>Add Doctor</h2></div>

                    <form asp-controller="Admin" asp-action="AddHospital" method="post" >
                        <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
        
                                <label asp-for="HospitalName">Hospital Name</label>
                                <span asp-validation-for="HospitalName" class="text-danger" style="font-size: xx-small;"></span>
                                <input asp-for="HospitalName" class="form-control" />
                                
                            </div>
                            <div class="form-group">
        
                                <label asp-for="Address">Address</label>
                                <span asp-validation-for="Address" class="text-danger" style="font-size: xx-small;"></span>
                                <input asp-for="Address" class="form-control" />
                                
                            </div>
                            <div class="form-group">
        
                                <label asp-for="PhoneNum">Phone Number</label>
                                <span asp-validation-for="PhoneNum" class="text-danger" style="font-size: xx-small;"></span>
                                <input asp-for="PhoneNum" class="form-control" />
                                
                            </div><br>
                            <div class="text-center"><button type="submit" class="btn btn-primary">Add Hospital</button></div>                            
                    </form>
            
        </div>
    </div>
</div>
