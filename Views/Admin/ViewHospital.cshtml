@model List<Hospital>
<partial name="_AdminLayout"/>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center"><h2>Hospitals</h2>

                <div class="row">
                    @foreach (var hospital in Model){
                        <div class="col-md-3 my-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">@hospital.HospitalName</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@hospital.PhoneNum</h6>
                                    <p class="card-text">@hospital.Address</p>
                                    
                                </div>
                                
                                <a class="card-link" asp-controller="Admin"asp-action="ViewDepartment" method="get" asp-route-id="@hospital.HospitalID">
                                        <button class="btn btn-outline-primary btn-sm" type="button">Departments</button>
                                </a>

                                <form asp-controller="Admin" asp-action="DeleteHospital" method="post">
                                    <input name="id" value="@hospital.HospitalID" type="hidden" />
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </div>

                        </div>

                    }

                </div>
            
                

                <a class="btn-primary" asp-controller="Admin"asp-action="AddHospital">
                    <button class="btn btn-primary" type="button">Add Hospital</button>
                </a>
                
            </div>

        </div>
    </div>
</div>