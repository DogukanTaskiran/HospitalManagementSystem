@model List<Diagnosis>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="path/to/bootstrap.min.css">
    <title>Diagnoses</title>
    <style>
        body {
            background-color: #f8f9fa; 
            padding-top: 20px;
        }

        .container {
            max-width: 1200px;
            background-color: #ffffff; 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto; 
            margin-top: 20px; 
        }

        .btn-back {
            margin-bottom: 20px;
            border: none; 
            color: #ffffff; 
            background-color: #007bff;
            padding: 10px 20px;
            border-radius: 5px; 
        }

            .btn-back:hover {
                background-color: #0056b3; 
            }
    </style>
</head>

<body>

    <div class="container">
        <h1 class="mb-4">Diagnoses</h1>
        <a class="btn btn-primary btn-back" asp-action="Profile" asp-controller="Patient">Back</a>
        <hr>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Diagnosis ID</th>
                        <th>Diagnosis Description</th>
                        <th>Diagnosis Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var diag in Model)
                    {
                        <tr>
                            <td>@diag.DiagnosisID</td>
                            <td>@diag.DiagnosisDescription</td>
                            <td>@diag.DiagnosisDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="path/to/jquery.slim.min.js"></script>
    <script src="path/to/popper.min.js"></script>
    <script src="path/to/bootstrap.min.js"></script>

</body>

</html>
