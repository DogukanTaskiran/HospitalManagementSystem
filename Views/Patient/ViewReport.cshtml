@model List<Report>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="path/to/bootstrap.min.css">
    <title>Reports</title>
    <style>
        body {
            padding-top: 20px;
        }

        .container {
            max-width: 800px;
        }

        .btn-back {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Reports</h1>
        <a class="btn btn-primary btn-back" asp-action="Profile" asp-controller="Patient">Back</a>
        <hr>

        <div class="table-responsive">
            @if (Model != null && Model.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ReportID</th>
                            <th>Name</th>
                            <th>Path</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rep in Model)
                        {
                            <tr>
                                <td>@rep.ReportID</td>
                                <td>@rep.filename</td>
                                <td>@rep.filepath</td>
                                <td>@rep.ReportDescription</td>
                                <td><a class="btn btn-success" href="~/uploads/@rep.filepath" download>Download</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No reports found.</p>
            }
        </div>
    </div>

    <script src="path/to/jquery.slim.min.js"></script>
    <script src="path/to/popper.min.js"></script>
    <script src="path/to/bootstrap.min.js"></script>

</body>

</html>
