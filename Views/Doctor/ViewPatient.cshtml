@model List<Patient>

<h1>List of Patients</h1>
<a class="btn btn-primary" asp-action="Profile" asp-controller="Doctor">Back</a><br><br>

<div style="display: flex; justify-content: space-between;">
    <form asp-action="DownloadExcel" asp-controller="Doctor" method="post">
        <button class="btn btn-success" type="submit">Export Appointments</button>
    </form>
    <form asp-action="DownloadExcelToday" asp-controller="Doctor" method="post">
        <button class="btn btn-success" type="submit">Export Today's Appointments</button>
    </form>
</div>


<br />
@foreach (var patient in Model)
{
    <div class="card">
        <h5 class="card-header">ID:@patient.ApplicationUser.ApplicationUserID - @patient.Name @patient.Surname </h5>
        <div class="card-body">
            <h5 class="card-title">Age: @patient.Age, Height: @patient.Height, Weight: @patient.Weight</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>

            <div class="row">
                <div class="col">
                    <form asp-action="ViewDiagnosis" asp-controller="Doctor" method="get">
                        <input type="hidden" name="id" value="@patient.ApplicationUser.ApplicationUserID">
                        <button class="btn btn-primary" type="submit">Diagnose</button>
                    </form>
                </div>
                <div class="col">
                    <form asp-action="ViewReport" asp-controller="Doctor" method="get">
                        <input type="hidden" name="id" value="@patient.ApplicationUser.ApplicationUserID">
                        <button class="btn btn-primary" type="submit">Reports</button>
                    </form>
                </div>
                <div class="col">
                    <form asp-action="ViewPrescription" asp-controller="Doctor" method="get">
                        <input type="hidden" name="id" value="@patient.ApplicationUser.ApplicationUserID">
                        <button class="btn btn-primary" type="submit">Prescriptions</button>
                    </form>
                </div>
                <div class="col">
                    <form asp-action="ViewRadiologicalReport" asp-controller="Doctor" method="get">
                        <input type="hidden" name="id" value="@patient.ApplicationUser.ApplicationUserID">
                        <button class="btn btn-primary" type="submit">Radiological Reports</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

}