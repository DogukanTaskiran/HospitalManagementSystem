@model List<Doctor>

<!DOCTYPE html>
<html>
<head>
    <title>Doctor List</title>
    <style>

        .card {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 20px;
        }

        .card-body {
            padding: 20px;
        }

        .doctor-name {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
            color: black;
        }

        .doctor-details {
            font-size: 16px;
            color: black;
        }

    </style>
</head>
<body>
    <div class="card">
        <h1 class="text-center">Doctors</h1>
    </div>
    @foreach (var doctor in Model)
    {
        <div class="card">
            <div class="card-body">
                <div class="doctor-name">@doctor.Name @doctor.Surname</div>
                <div class="doctor-details">
                    <p><strong>Email:</strong> @doctor.Email</p>
                    <p><strong>Phone Number:</strong> @doctor.PhoneNumber</p>
                    <p><strong>Hospital:</strong> @doctor.Departments.Hospital.HospitalName
                       <strong>Department:</strong> @doctor.Departments.DepartmentName
                       <strong>Room Number:</strong> @doctor.RoomNumber
                    </p>
                </div>
            </div>
        </div>
    }
</body>
</html>
