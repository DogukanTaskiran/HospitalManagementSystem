@model List<Doctor>

<!DOCTYPE html>
<html>
<head>
    <title>Doctor List</title>
    <style>
        .card {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 20px;
        }

        .card-body {
            padding: 20px;
        }

        .doctor-name {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .doctor-details {
            font-size: 16px;
            color: #666;
        }
    </style>
</head>
<body>
    <h2>Doctor List</h2>
    @foreach (var doctor in Model)
    {
        <div class="card">
            <div class="card-body">
                <div class="doctor-name">@doctor.Name</div>
                <div class="doctor-details">
                    <p><strong>Email:</strong> @doctor.Email</p>
                    <!-- Add other information here -->
                </div>
            </div>
        </div>
    }
</body>
</html>
