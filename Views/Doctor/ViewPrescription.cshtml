@model PrescriptionDTO
<h1 class="text-center">Reports</h1>
<div style="width: 200px;">
<form asp-action="AddPrescription" asp-controller="Doctor" method="post" enctype="multipart/form-data">
    <input type="hidden" name="PatientID" value="@Model.PatientID" />
    <div class="form-group">

        <label asp-for="PrescriptionDate">Diagnosis Date</label>
        <span asp-validation-for="PrescriptionDate" class="text-danger" style="font-size: xx-small;"></span>
        <input asp-for="PrescriptionDate" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="PrescriptionFile">Upload Report:</label>
        <input asp-for="PrescriptionFile" type="file" class="form-control-file" />
        <span asp-validation-for="PrescriptionFile" class="text-danger"></span>
    </div><br>
    <button type="submit" class="btn btn-primary">Add Prescription</button>
</form>
</div>


<br>
<br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>PrescriptionID</th>
            <th>Name</th>
            <th>Path</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pres in @Model.Prescriptions)
        {
            <tr>
                <td>@pres.PrescriptionID</td>
                <td>@pres.filename</td>
                <td>@pres.filepath</td>
                <td>@pres.PrescriptionDate</td>
            </tr>
        }
    </tbody>
</table>
